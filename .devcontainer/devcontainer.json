// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"dockerComposeFile": "docker-compose.dev.yml",
	// "runArgs": [
	// 	"--env-file","devcontainer.env",
	// 	"-v", "meltano-bashhistory:/root/commandhistory",
	// ],
	"service": "meltano_dev",
	"workspaceFolder": "/projects",
	"extensions": [
		// "atlassian.atlascode", 		// Atlassian Bitbucket and Jira
		// // Bug in Atlassian extension when run in Remote-Containers:
		// // https://bitbucket.org/atlassianlabs/atlascode/issues/112/cannot-activate-the-atlassian-for-vscode#comment-52196214
		"eamodio.gitlens", // Git, Robust VS Code GUI
		"ms-python.python", // Python
		"redhat.vscode-yaml", // YAML
	],
	"name": "meltano-container-dev",
	"postCreateCommand": "echo -e 'Portal for meltano ui: http://localhost:5000'",
	"settings": {
		// "python.pythonPath": "/opt/conda/bin/python",
		// use a distinct theme to indicate we are in a container
		"workbench.colorTheme": "Visual Studio Dark",
	}
}